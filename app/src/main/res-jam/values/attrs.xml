<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="InlineAnim">
        <attr name="jam_target" format="reference"/>
        <attr name="jam_trigger" format="reference"/>
        <attr name="jam_duration" format="integer"/>
        <attr name="jam_startDelay" format="integer"/>
        <attr name="jam_targetStateBefore" format="integer"/>
        <attr name="jam_targetStateAfter" format="integer"/>
        <attr name="jam_allowInterruption" format="boolean"/>

        <attr name="jam_triggerEvents" format="flags">
            <flag name="onClick" value="1"/>
            <flag name="onLongClick" value="2"/>
        </attr>

        <attr name="jam_interpolator" format="enum">
            <enum name="linear" value="1"/>
            <enum name="linearOutSlowIn" value="2"/>
            <enum name="accelerate" value="3"/>
            <enum name="decelerate" value="4"/>
            <enum name="accelerateDecelerate" value="5"/>
            <enum name="anticipate" value="6"/>
            <enum name="anticipateOvershoot" value="7"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="InlineFloatProperty">
        <attr name="jam_startWithCurrentValue" format="boolean"/>
        <attr name="jam_startFloat" format="float"/>
        <attr name="jam_endFloat" format="float"/>

        <attr name="jam_floatProperty" format="enum">
            <enum name="translationX" value="1"/>
            <enum name="translationY" value="2"/>
            <enum name="rotation" value="3"/>
            <enum name="rotationX" value="4"/>
            <enum name="rotationY" value="5"/>
            <enum name="scaleX" value="6"/>
            <enum name="scaleY" value="7"/>
            <enum name="alpha" value="8"/>
        </attr>

    </declare-styleable>

    <declare-styleable name="InlineColorProperty">
        <attr name="jam_startColor" format="color"/>
        <attr name="jam_endColor" format="color"/>

        <attr name="jam_colorProperty" format="enum">
            <enum name="backgroundColor" value="1"/>
            <enum name="colorFilter" value="2"/>
            <enum name="textColor" value="3"/>
        </attr>
    </declare-styleable>
</resources>