<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:columnCount="3">

    <Button
            style="@style/NumPadItem"
            android:id="@+id/num_button_1"
            android:text="1"/>
    <Button
            style="@style/NumPadItem"
            android:id="@+id/num_button_2"
            android:text="2"/>
    <Button
            style="@style/NumPadItem"
            android:id="@+id/num_button_3"
            android:text="3"/>
    <Button
            style="@style/NumPadItem"
            android:id="@+id/num_button_4"
            android:text="4"/>
    <Button
            style="@style/NumPadItem"
            android:id="@+id/num_button_5"
            android:text="5"/>
    <Button
            style="@style/NumPadItem"
            android:id="@+id/num_button_6"
            android:text="6"/>
    <Button
            style="@style/NumPadItem"
            android:id="@+id/num_button_7"
            android:text="7"/>
    <Button
            style="@style/NumPadItem"
            android:id="@+id/num_button_8"
            android:text="8"/>
    <Button
            style="@style/NumPadItem"
            android:id="@+id/num_button_9"
            android:text="9"/>

    <!--<Space style="@style/NumPadItem"/>-->

    <Button
            style="@style/NumPadItem"
            android:id="@+id/num_button_0"
            android:text="0"/>

    <FrameLayout
            style="@style/NumPadItem">

        <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                app:backgroundTint="#2462ff"
                android:layout_gravity="center"
                android:src="@drawable/ic_check"
                android:tint="#ffffff"
                style="@style/NumPadItem"/>
    </FrameLayout>

    <ImageView
            style="@style/NumPadItem"
            android:id="@+id/backspace"
            android:scaleType="center"
            android:tint="#f5f5f5"
            android:src="@drawable/ic_backspace"
            android:contentDescription="backspace"/>

</GridLayout>