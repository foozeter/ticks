<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".TestActivity"
        android:id="@+id/decorView">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal|bottom"/>

        <View android:layout_width="48dp" android:layout_height="48dp"
              android:layout_gravity="center"
              android:background="#0000ff"
        />

        <ImageView android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:src="@drawable/ic_menu_camera"
                   android:id="@+id/img"
                   android:layout_gravity="center"/>


    </FrameLayout>

    <com.foureyedstraighthair.ticks.jam.inline.anim.InlineFloatPropertyAnim
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:jam_target="@id/img"
            android:id="@+id/animA"
            app:jam_trigger="@id/button"
            app:jam_allowInterruption="false"
            app:jam_duration="2000"
            app:jam_targetStateBefore="0"
            app:jam_targetStateAfter="1"
            app:jam_triggerEvents="onClick|onLongClick">

        <com.foureyedstraighthair.ticks.jam.inline.property.InlineFloatProperty
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:jam_floatProperty="translationX"
                app:jam_startFloat="0"
                app:jam_endFloat="300"/>

    </com.foureyedstraighthair.ticks.jam.inline.anim.InlineFloatPropertyAnim>

    <com.foureyedstraighthair.ticks.jam.inline.anim.InlineFloatPropertyAnim
            style="@style/Inline"
            app:jam_target="@id/img"
            app:jam_trigger="@id/button"
            app:jam_duration="2000"
            android:id="@+id/animB"
            app:jam_startColor="#ff0000"
            app:jam_allowInterruption="false"
            app:jam_endColor="#000000"
            app:jam_targetStateBefore="1"
            app:jam_targetStateAfter="0"
            app:jam_triggerEvents="onClick">

        <com.foureyedstraighthair.ticks.jam.inline.property.InlineFloatProperty
                style="@style/Inline"
                app:jam_floatProperty="translationX"
                app:jam_startWithCurrentValue="true"
                app:jam_startFloat="300"
                app:jam_endFloat="0"/>

    </com.foureyedstraighthair.ticks.jam.inline.anim.InlineFloatPropertyAnim>

    <com.foureyedstraighthair.ticks.jam.inline.anim.InlineColorPropertyAnim
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:jam_allowInterruption="false"
            app:jam_target="@id/img"
            android:id="@+id/animC"
            app:jam_trigger="@id/button"
            app:jam_duration="2000"
            app:jam_targetStateBefore="0"
            app:jam_targetStateAfter="1"
            app:jam_triggerEvents="onClick">

        <com.foureyedstraighthair.ticks.jam.inline.property.InlineColorProperty
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:jam_colorProperty="backgroundColor"
                app:jam_startColor="#0000ff"
                app:jam_endColor="#ff000000"/>
        <com.foureyedstraighthair.ticks.jam.inline.property.InlineColorProperty
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:jam_colorProperty="colorFilter"
                app:jam_startColor="#000000"
                app:jam_endColor="#ff0000"/>

    </com.foureyedstraighthair.ticks.jam.inline.anim.InlineColorPropertyAnim>

    <com.foureyedstraighthair.ticks.jam.inline.anim.InlineColorPropertyAnim
            style="@style/Inline"
            app:jam_target="@id/img"
            app:jam_trigger="@id/button"
            android:id="@+id/animD"
            app:jam_duration="2000"
            app:jam_allowInterruption="false"
            app:jam_targetStateBefore="1"
            app:jam_targetStateAfter="0"
            app:jam_triggerEvents="onClick">

        <com.foureyedstraighthair.ticks.jam.inline.property.InlineColorProperty
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:jam_colorProperty="backgroundColor"
                app:jam_endColor="#0000ff"
                app:jam_startColor="#ff000000"/>
        <com.foureyedstraighthair.ticks.jam.inline.property.InlineColorProperty
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:jam_colorProperty="colorFilter"
                app:jam_endColor="#000000"
                app:jam_startColor="#ff0000"/>

    </com.foureyedstraighthair.ticks.jam.inline.anim.InlineColorPropertyAnim>

</FrameLayout>