<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".TestActivity"
        android:id="@+id/decorView">

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal|bottom"/>

    <View android:layout_width="48dp" android:layout_height="48dp"
          android:layout_gravity="center"
          android:background="#0000ff"
    />

    <ImageView android:layout_width="48dp"
               android:layout_height="48dp"
               android:src="@drawable/ic_menu_camera"
               android:layout_gravity="center"
               android:id="@+id/img"/>

    <com.foureyedstraighthair.ticks.inlime.InlineAnimator
            android:id="@+id/anim_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:inlime_target="@id/img"
            app:inlime_trigger="@id/button"
            app:inlime_animator="@animator/test_animator_2"
            app:inlime_allowInterruption="false"
            app:inlime_triggeredByClick="true"
            app:inlime_triggeredByLongClick="true"/>

