<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".TestActivity"
        android:id="@+id/decorView">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal|bottom"/>

        <ImageView android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:src="@drawable/ic_menu_camera"
                   android:id="@+id/img"
                   android:layout_gravity="center"/>

    </FrameLayout>

    <com.foureyedstraighthair.ticks.jam.inline.InlineTranslationAnim
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anim_1"
            app:jam_target="@id/img"
            app:jam_trigger="@id/button"
            app:jam_duration="500"
            app:jam_fromXDelta="0"
            app:jam_toXDelta="100dp"
            app:jam_fromYDelta="0"
            app:jam_toYDelta="-100dp"
            app:jam_targetFlagBefore="0"
            app:jam_targetFlagAfter="1"
            app:jam_triggerEvents="onClick"/>

    <com.foureyedstraighthair.ticks.jam.inline.InlineTranslationAnim
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anim_2"
            app:jam_target="@id/img"
            app:jam_trigger="@id/button"
            app:jam_duration="500"
            app:jam_fromXDelta="100dp"
            app:jam_toXDelta="0"
            app:jam_fromYDelta="-100dp"
            app:jam_toYDelta="0"
            app:jam_targetFlagBefore="1"
            app:jam_targetFlagAfter="0"
            app:jam_triggerEvents="onClick"/>


</FrameLayout>