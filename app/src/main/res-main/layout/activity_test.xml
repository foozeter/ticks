<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".TestActivity"
        android:id="@+id/decorView">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal|bottom"/>

        <View android:layout_width="48dp" android:layout_height="48dp"
              android:layout_gravity="center"
              android:background="#0000ff"
        />

        <ImageView android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:src="@drawable/ic_menu_camera"
                   android:id="@+id/img"
                   android:layout_gravity="center"/>


    </FrameLayout>

    <com.foureyedstraighthair.ticks.jam.inline.convenience.InlineTranslateAnim
            style="@style/Inline"
            app:jam_duration="500"
            app:jam_target="@id/img"
            app:jam_trigger="@id/button"
            app:jam_startWithCurrentX="true"
            app:jam_startWithCurrentY="true"
            app:jam_endX="50%"
            app:jam_endY="50%"
            app:jam_allowInterruption="false"
            app:jam_triggerEvents="onClick"
            app:jam_targetStateAfter="1"
            app:jam_targetStateBefore="0"/>

    <com.foureyedstraighthair.ticks.jam.inline.convenience.InlineTranslateAnim
            style="@style/Inline"
            app:jam_duration="500"
            app:jam_target="@id/img"
            app:jam_trigger="@id/button"
            app:jam_endX="0%"
            app:jam_endY="0%"
            app:jam_startWithCurrentX="true"
            app:jam_startWithCurrentY="true"
            app:jam_allowInterruption="false"
            app:jam_triggerEvents="onClick"
            app:jam_targetStateAfter="0"
            app:jam_targetStateBefore="1"/>

</FrameLayout>